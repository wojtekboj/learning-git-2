{
  "name": "learning-git-2",
  "version": "1.0.0",
  "description": "https://wojtekboj.github.io/learning-git-2/ Link do strony",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html",
      
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdir sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm-run-all build:* test",
      
    "build:clean": "rimraf css/*",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
      
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    
    "watch": "npm-run-all build -p watch:*",
    "watch:sassprefixer" : "onchange -d 100 sass/* --npm-run-all autoprefixer-cli -o css/style.css node-sass --output-style expanded --source-map true -o css sass",
      
    "watch:browsersync": "node_modules/.bin/browser-sync start --server --files css/*.css *.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wojtekboj/learning-git-2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wojtekboj/learning-git-2/issues"
  },
  "homepage": "https://github.com/wojtekboj/learning-git-2#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.4",
    "nu-html-checker": "^0.1.0"
  },
  "dependencies": {
    "rimraf": "^2.6.2"
  }
}
